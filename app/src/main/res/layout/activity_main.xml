<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/mancha1"
        android:layout_width="361dp"
        android:layout_height="360dp"
        android:src="@drawable/ic_mancha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginBottom="400dp"
        android:layout_marginRight="260dp"
        />


    <ImageView
        android:id="@+id/mancha3"
        android:layout_width="356dp"
        android:layout_height="394dp"
        android:layout_marginEnd="204dp"
        android:src="@drawable/ic_mancha"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="465dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/mancha2"
        android:layout_width="356dp"
        android:layout_height="394dp"
        android:src="@drawable/ic_mancha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginBottom="80dp"
        android:layout_marginLeft="260dp"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/zendots"
        android:textSize="24dp"

        android:text="BUSCA"
        android:textColor="#FF842B"


        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <TextView
        android:id="@+id/tvNombre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNombre"


        android:fontFamily="@font/zendots"
        android:textSize="24dp"

        android:text="GEMAS"
        android:textColor="#FF842B"
        />

    <Button
        android:id="@+id/btPlay"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#004BBB"
        android:text="Play"
        android:onClick="openGame"
        android:fontFamily="@font/zendots"
        android:textColor="#FF842B"

        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNombre2" />

    <Button
        android:id="@+id/btResultados"
        android:layout_width="180dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:backgroundTint="#00ADE3"
        android:text="Resultados"
        android:fontFamily="@font/zendots"

        android:textColor="#FF842B"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btPlay" />

    <Button
        android:id="@+id/btTutorial"
        android:layout_width="180dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:backgroundTint="#00ADE3"


        android:text="Tutorial"
        android:fontFamily="@font/zendots"
        android:textColor="#FF842B"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btResultados" />
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.543"
        tools:layout_editor_absoluteX="182dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>